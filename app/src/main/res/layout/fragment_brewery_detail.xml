<ScrollView android:id="@+id/brewery_detail_scrollview"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.BreweryDetailFragment">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/brewery_image_layout"
                android:layout_width="match_parent"
                android:layout_height="128dp">

                <ImageView
                    android:id="@+id/brewery_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/brewery_image"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/brewery_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brewery_image_layout"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Phone: 512-123-4567"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="Address Line 1"/>

                <TextView
                    android:id="@+id/address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Address Line 2"/>

                <TextView
                    android:id="@+id/city_state_postal_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="City, ST 12345"/>

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/taproom_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="Taproom Hours: 7 days, 10a-10p"/>

                <TextView
                    android:id="@+id/tour_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="Tour Hours: 7 days, every hour"/>

                <TextView
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="Website: http://www.website.com/"/>

                <TextView
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    tools:text="Twitter: @twittername"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/beer_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brewery_info_layout"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/beer_list"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/beer_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    tools:listitem="@layout/template_beer"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>